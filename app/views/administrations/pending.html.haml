= render "shared/main_menu"

.container.text-center
  %h1= t(:pending_boxscores)

  - @pending_boxscores.each do |p|
    %br
    - if p.at == 'H'
      - home_team = "New York"
    -else home_team = p.team.name

    %strong
      = "NYK vs #{p.team.name}"
    %br
    = " @#{home_team}"
    %br
    = p.date
    %br
    = link_to t(:fill_stats), new_game_boxscore_path(p)
    %br
    %br
