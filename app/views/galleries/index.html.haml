%h1 Fun stuff coming soon

- if user_signed_in? && current_user.role >= 2 
  = link_to "Add new image", new_image_path
  %br
  = link_to "Add video from youtube", new_video_path

%ul.list-inline.video-list
  - @game_highlight_videos.each do |video|
    %li
      %iframe{:allowfullscreen => "", :frameborder => "0", :height => "240", :src => "#{video.video_link}", :width => "429"}

%ul.list
  - @player_highlight_videos.each do |video|
    %li
      %iframe{:allowfullscreen => "", :frameborder => "0", :height => "315", :src => "#{video.video_link}", :width => "560"}

%ul
  - @compilation_videos.each do |video|
    %li
      %iframe{:allowfullscreen => "", :frameborder => "0", :height => "315", :src => "#{video.video_link}", :width => "560"}

%ul
  - @images.each do |image|
    %li
      = image_tag image.image.url(:medium)
