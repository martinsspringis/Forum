%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title NYK
    %script{:src => "http://twitter.github.io/bootstrap/dist/js/bootstrap.js"}
    %link{:href => "https://fonts.googleapis.com/css?family=Anton|Open+Sans+Condensed:300", :rel => "stylesheet"}/
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
  %body#body
    - if user_signed_in?
      - if current_user.skin_id == nil
        = image_tag "skin6", class: "background_img"
      - else
        = image_tag "skin#{current_user.skin_id}", class: "background_img"
    -else
      = image_tag "skin6", class: "background_img"

    %p.notice= notice
    %p.alert= alert

    = yield