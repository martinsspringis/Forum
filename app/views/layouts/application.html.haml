%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title Forums
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
  %body

    = link_to "home", articles_path
    = link_to "administration", administrations_path if current_user && current_user.admin

    -if user_signed_in?
      -if current_user.nickname
        = link_to "hello, #{current_user.nickname}", edit_user_path(current_user)
      -else
        = link_to "hello, #{current_user.email}", edit_user_path(current_user)
      = link_to t(:log_out), destroy_user_session_path, method: :delete
    -else
      = link_to t(:log_in), new_user_session_path
      = link_to t(:sign_up), new_user_registration_path
    
    %p.notice= notice
    %p.alert= alert

    = yield