- if @article.errors.any?
  = pluralize(@article.errors.count, "error")

  %ul
    - @article.errors.full_messages.each do |msg|
      %li= msg


= form_for(@article) do |f|
  .field
    = f.label "Author: "
    = f.text_field :author

  .field
    = f.label "Title: "
    = f.text_field :title

  .field 
    = f.label "Article: "
    = f.text_area :content

  .actions
    = f.submit "Save article"
