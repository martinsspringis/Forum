%h1= "New York Knicks vs #{@game.team.name}"
- if @game.team.name == 'H'
  %h1= "@New York"
- else
  %h1= "@#{@game.team.name}"
- if @game.nyk_points and @game.opponent_points
  %h1= "#{@game.nyk_points} : #{@game.opponent_points}"

%br

- if @game.reviewed = true and @game.player_stats.count > 0
  %table
    %tr
      %th Player name
      %th Minutes
      %th FGM
      %th FGA
      %th 3PTM
      %th 3PTA
      %th FTM
      %th FTA
      %th OR
      %th REB
      %th AST
      %th BLK
      %th STL
      %th TO
      %th FOULS
      %th PTS
      %th +/-
      - @game.player_stats.each do |player|
        %tr
          %td= player.player.name
          %td= player.min
          %td= player.fgm
          %td= player.fga
          %td= player.three_m
          %td= player.three_a
          %td= player.ftm
          %td= player.fta
          %td= player.or
          %td= player.reb
          %td= player.ast
          %td= player.blk
          %td= player.stl
          %td= player.to
          %td= player.fouls
          %td= player.pts
          %td= player.eff_factor
