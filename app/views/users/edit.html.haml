%h1 edit profile

- if @user.errors.any?
  = pluralize(@user.errors.count, "error")

  %ul
    - @user.errors.full_messages.each do |msg|
      %li= msg


-if @user.asset?
  = image_tag @user.asset.url(:large)
-else 
  = image_tag "default_avatar.jpg", id: "default_avatar"

= simple_form_for @user do |f|
  = f.input :name
  = f.input :surname
  = f.input :nickname
  = f.input :asset
  = f.input :skin_id, label: "Choose skin", collection: 1..6
  = f.button :submit, "Save changes"